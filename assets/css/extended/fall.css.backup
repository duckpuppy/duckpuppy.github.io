/* Fall/Autumn color scheme
 * theme-id: fall
 * Cozy autumn vibes with falling leaves and harvest tones
 * Colors: #d2691e (chocolate), #ff8c00 (dark orange), #8b4513 (saddle brown), #daa520 (goldenrod), #8b0000 (dark red)
 */

:root {
  /* Light mode - crisp autumn day */
  --theme: #fdf8f3;
  --entry: #f5ebe0;
  --primary: #4a2511;
  --secondary: #6b3d1f;
  --tertiary: #e8d5c4;
  --content: #4a2511;
  --hljs-bg: #f5ebe0;
  --code-bg: #ede1d6;
  --border: #c9a87c;

  /* Fall colors */
  --burnt-orange: #cc5500;
  --deep-red: #8b0000;
  --golden-yellow: #daa520;
  --ochre: #cc7722;
  --russet: #80461b;
  --amber: #ffbf00;
}

.dark {
  /* Dark mode - cozy autumn evening */
  --theme: #2a1810;
  --entry: #3a2418;
  --primary: #f5deb3;
  --secondary: #d4a574;
  --tertiary: #4a3020;
  --content: #e8d5c4;
  --hljs-bg: #1a0f08;
  --code-bg: #2a1810;
  --border: #8b4513;

  /* Fall colors */
  --burnt-orange: #ff8c00;
  --deep-red: #cd5c5c;
  --golden-yellow: #ffd700;
  --ochre: #dd8833;
  --russet: #a0632a;
  --amber: #ffcc00;
}

/* Links - burnt orange */
a {
  color: var(--burnt-orange);
}

a:hover {
  color: var(--golden-yellow);
}

/* Post entries - autumn leaves */
.post-entry {
  border-left: 4px solid var(--burnt-orange);
  background: linear-gradient(to right, transparent, rgba(204, 85, 0, 0.02));
}

.post-entry:hover {
  border-color: var(--deep-red);
  box-shadow: 0 2px 8px rgba(139, 0, 0, 0.15);
}

/* Buttons - deep red */
.button,
button,
input[type="submit"] {
  background-color: var(--deep-red);
  border-color: var(--deep-red);
  color: #f5deb3;
}

.button:hover,
button:hover,
input[type="submit"]:hover {
  background-color: var(--burnt-orange);
  border-color: var(--burnt-orange);
}

/* Tags - golden yellow and ochre */
.post-tags a {
  background-color: var(--golden-yellow);
  color: var(--russet);
  border: 1px solid var(--ochre);
}

.post-tags a:hover {
  background-color: var(--amber);
  border-color: var(--burnt-orange);
}

/* Highlights - amber */
mark,
.highlight {
  background-color: var(--amber);
  color: var(--russet);
}

/* Top link - ochre */
.top-link {
  background-color: var(--ochre);
  color: white;
}

.top-link:hover {
  background-color: var(--burnt-orange);
}

/* Code syntax highlighting - Fall themed */
.dark .hljs-keyword,
.dark .hljs-selector-tag,
.dark .hljs-literal {
  color: var(--deep-red);
}

.dark .hljs-string,
.dark .hljs-title,
.dark .hljs-name {
  color: var(--golden-yellow);
}

.dark .hljs-attribute,
.dark .hljs-symbol {
  color: var(--ochre);
}

.dark .hljs-function,
.dark .hljs-class {
  color: var(--burnt-orange);
}

.dark .hljs-number {
  color: var(--amber);
}

.dark .hljs-comment {
  color: #8a7a6a;
  font-style: italic;
}

/* Light mode syntax highlighting */
.hljs-keyword,
.hljs-selector-tag,
.hljs-literal {
  color: #6b0000;
}

.hljs-string,
.hljs-title,
.hljs-name {
  color: #b8860b;
}

.hljs-attribute,
.hljs-symbol {
  color: #a0632a;
}

.hljs-function,
.hljs-class {
  color: #8b4513;
}

.hljs-number {
  color: #cc8800;
}

.hljs-comment {
  color: #8b7355;
  font-style: italic;
}

/* Falling leaves effect on headings */
.dark h1,
.dark h2 {
  color: var(--amber);
}

.post-title {
  color: var(--burnt-orange);
}

.dark .post-title {
  color: var(--golden-yellow);
}
