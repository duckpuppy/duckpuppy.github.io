/* Valentine's Day color scheme
 * theme-id: valentines
 * Romance and love with reds, pinks, and roses
 * Colors: #dc143c (crimson), #ff69b4 (hot pink), #ff1493 (deep pink), #8b0000 (dark red), #fff0f5 (lavender blush)
 */

:root {
  /* Light mode - soft romantic colors */
  --theme: #fff5f8;
  --entry: #ffe4e9;
  --primary: #8b0000;
  --secondary: #a52a2a;
  --tertiary: #ffd4dc;
  --content: #6b0000;
  --hljs-bg: #ffe4e9;
  --code-bg: #ffd9e2;
  --border: #ffb6c1;

  /* Valentine's accent colors */
  --crimson: #dc143c;
  --hot-pink: #ff69b4;
  --deep-pink: #ff1493;
  --dark-red: #8b0000;
  --rose: #ff007f;
  --lavender-blush: #fff0f5;
}

.dark {
  /* Dark mode - deep romantic atmosphere */
  --theme: #1a0a0d;
  --entry: #2a1518;
  --primary: #ffb6c1;
  --secondary: #ff91a4;
  --tertiary: #3a2025;
  --content: #ffc0cb;
  --hljs-bg: #0d0507;
  --code-bg: #1a0f12;
  --border: #8b0000;

  /* Valentine's accent colors */
  --crimson: #dc143c;
  --hot-pink: #ff69b4;
  --deep-pink: #ff1493;
  --dark-red: #b22222;
  --rose: #ff007f;
  --lavender-blush: #fff0f5;
}

/* Links - vibrant pink */
a {
  color: var(--deep-pink);
}

a:hover {
  color: var(--crimson);
}

/* Post entries - romantic borders */
.post-entry {
  border-left: 3px solid var(--deep-pink);
}

.post-entry:hover {
  border-color: var(--crimson);
  box-shadow: 0 2px 12px rgba(220, 20, 60, 0.2);
}

/* Buttons - bold pink */
.button,
button,
input[type="submit"] {
  background-color: var(--deep-pink);
  border-color: var(--deep-pink);
  color: white;
}

.button:hover,
button:hover,
input[type="submit"]:hover {
  background-color: var(--crimson);
  border-color: var(--crimson);
}

/* Tags - hot pink */
.post-tags a {
  background-color: var(--hot-pink);
  color: white;
}

.post-tags a:hover {
  background-color: var(--rose);
}

/* Highlights - lavender blush */
mark,
.highlight {
  background-color: var(--lavender-blush);
  color: var(--dark-red);
  border-left: 3px solid var(--deep-pink);
}

/* Top link - crimson */
.top-link {
  background-color: var(--crimson);
  color: white;
}

.top-link:hover {
  background-color: var(--deep-pink);
}

/* Code syntax highlighting - Valentine themed */
.dark .hljs-keyword,
.dark .hljs-selector-tag,
.dark .hljs-literal {
  color: var(--crimson);
}

.dark .hljs-string,
.dark .hljs-title,
.dark .hljs-name {
  color: var(--hot-pink);
}

.dark .hljs-attribute,
.dark .hljs-symbol {
  color: var(--deep-pink);
}

.dark .hljs-function,
.dark .hljs-class {
  color: var(--rose);
}

.dark .hljs-number {
  color: var(--lavender-blush);
}

.dark .hljs-comment {
  color: #7a5a5f;
  font-style: italic;
}

/* Light mode syntax highlighting */
.hljs-keyword,
.hljs-selector-tag,
.hljs-literal {
  color: #b22222;
}

.hljs-string,
.hljs-title,
.hljs-name {
  color: #c71585;
}

.hljs-attribute,
.hljs-symbol {
  color: #db7093;
}

.hljs-function,
.hljs-class {
  color: #8b0000;
}

.hljs-number {
  color: #cd5c5c;
}

.hljs-comment {
  color: #a0606a;
  font-style: italic;
}

/* Hearts effect on special elements */
.dark h1::before,
.dark h2::before {
  content: "â™¥ ";
  color: var(--deep-pink);
}
