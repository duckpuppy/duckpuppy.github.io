/* Independence Day color scheme
 * theme-id: independence-day
 * Bold patriotic celebration with vibrant red, white, and blue
 * Colors: #ff0000 (bright red), #0000ff (bright blue), #ffffff (white), #1e3a8a (navy), #dc2626 (crimson)
 */

:root {
  /* Light mode - vibrant patriotic celebration */
  --theme: #ffffff;
  --entry: #f0f4ff;
  --primary: #1e3a8a;
  --secondary: #3b5998;
  --tertiary: #dbeafe;
  --content: #1e3a8a;
  --hljs-bg: #f0f4ff;
  --code-bg: #e0e8ff;
  --border: #93c5fd;

  /* Independence Day colors */
  --freedom-red: #dc2626;
  --liberty-blue: #2563eb;
  --star-white: #ffffff;
  --navy: #1e3a8a;
  --firework-red: #ef4444;
  --sky-blue: #60a5fa;
}

.dark {
  /* Dark mode - fireworks in the night sky */
  --theme: #0a0f1e;
  --entry: #151a2e;
  --primary: #f0f4ff;
  --secondary: #c0c4df;
  --tertiary: #252a3e;
  --content: #e0e4f8;
  --hljs-bg: #050a18;
  --code-bg: #0f1428;
  --border: #3b5998;

  /* Independence Day colors */
  --freedom-red: #ef4444;
  --liberty-blue: #3b82f6;
  --star-white: #ffffff;
  --navy: #2563eb;
  --firework-red: #f87171;
  --sky-blue: #60a5fa;
}

/* Links - liberty blue */
a {
  color: var(--liberty-blue);
}

a:hover {
  color: var(--freedom-red);
  text-decoration: underline;
  text-decoration-color: var(--freedom-red);
}

/* Post entries - stars and stripes theme */
.post-entry {
  border-left: 5px solid var(--freedom-red);
  border-right: 1px solid var(--liberty-blue);
}

.post-entry:hover {
  border-left-color: var(--liberty-blue);
  border-right-color: var(--freedom-red);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

/* Buttons - freedom red */
.button,
button,
input[type="submit"] {
  background-color: var(--freedom-red);
  border-color: var(--freedom-red);
  color: white;
  font-weight: 700;
}

.button:hover,
button:hover,
input[type="submit"]:hover {
  background-color: var(--liberty-blue);
  border-color: var(--liberty-blue);
}

/* Tags - alternating red and blue */
.post-tags a {
  background-color: var(--liberty-blue);
  color: white;
  border: 2px solid var(--freedom-red);
}

.post-tags a:hover {
  background-color: var(--freedom-red);
  border-color: var(--liberty-blue);
}

/* Highlights - star white with red accent */
mark,
.highlight {
  background-color: var(--star-white);
  color: var(--navy);
  border-left: 4px solid var(--freedom-red);
  border-right: 4px solid var(--liberty-blue);
}

/* Top link - firework effect */
.top-link {
  background-color: var(--firework-red);
  color: white;
}

.top-link:hover {
  background-color: var(--sky-blue);
  box-shadow: 0 0 15px rgba(96, 165, 250, 0.6);
}

/* Code syntax highlighting - patriotic */
.dark .hljs-keyword,
.dark .hljs-selector-tag,
.dark .hljs-literal {
  color: var(--freedom-red);
  font-weight: 600;
}

.dark .hljs-string,
.dark .hljs-title,
.dark .hljs-name {
  color: var(--sky-blue);
}

.dark .hljs-attribute,
.dark .hljs-symbol {
  color: var(--star-white);
}

.dark .hljs-function,
.dark .hljs-class {
  color: var(--liberty-blue);
}

.dark .hljs-number {
  color: var(--firework-red);
}

.dark .hljs-comment {
  color: #6a7a9a;
  font-style: italic;
}

/* Light mode syntax highlighting */
.hljs-keyword,
.hljs-selector-tag,
.hljs-literal {
  color: #991b1b;
  font-weight: 600;
}

.hljs-string,
.hljs-title,
.hljs-name {
  color: #1e40af;
}

.hljs-attribute,
.hljs-symbol {
  color: #374151;
}

.hljs-function,
.hljs-class {
  color: #1e3a8a;
}

.hljs-number {
  color: #b91c1c;
}

.hljs-comment {
  color: #6b7280;
  font-style: italic;
}

/* Firework sparkle effect on headings */
.dark h1,
.dark h2 {
  color: var(--star-white);
  text-shadow:
    0 0 10px rgba(239, 68, 68, 0.4),
    0 0 20px rgba(59, 130, 246, 0.3);
}
